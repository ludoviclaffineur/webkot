<section id="edit-profile">
  <%= form_for(@user, :url => user_path, :html => { :multipart => true }) do |f| %>
    <ul class="picture">
      <li>
        <%= image_tag @user.avatar.url(:medium) %>
        <%= f.file_field :avatar %>
      </li>
      <li class="profile-actions">
        <%= link_to t("profile.change_password"), edit_user_password_path %>
      </li>
    </ul>
    <ul class="fields">
			<h2><%= t("profile.fill_your_profile") %></h2>
			<% @user.errors.full_messages.each do |msg| %>
				<p><b><%= msg %></b></p>
			<% end %>
      <li class="string">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
      <li class="string">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
   		<li class="string">
				<%= f.label :nickname %>
		  	<%= f.text_field :nickname %>
			</li>

				<li class="string">
				<%= f.label :kot %>
		  <%= f.text_field :kot %>
		</li>

				<li class="string">
				<%= f.label :studies %>
		  <%= f.text_field :studies %>
		</li>

				<li class="string">
				<%= f.label :birthday %>
		  <%= f.datetime_select :birthday %>
		</li>
    </ul>
    <div class="form-actions clear">
      <span class="button"><%= f.submit 'save' %></span>
    </div>
  <% end %>
</section>
