<section id="show-profile">
<div id="profile-info">
	<% if current_user == @user %>
	<div id="edit-button">
	 <%= link_to 'edit' , edit_user_path(current_user)%>
	</div>
	<% end %>
   <h2><%= @user.name %> - (<%= @user.nickname  %>)</h2>
		 <%= image_tag @user.avatar.url(:medium) %>
   <ul>
     <li>
       <span class="label"><%= t("profile.email") %></span>
       <%= @user.email %>
     </li>
     <li>
       <span class="label">Kot: </span>
       <%= @user.kot %>
     </li>
		<li>
       <span class="label">Studies:</span>
       <%= @user.studies %>
     </li>
   </ul>
 </div>
</section>