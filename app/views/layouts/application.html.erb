<!DOCTYPE html>
<html>
<head>
  <title>Webkot</title>
  <%= stylesheet_link_tag    "main", :media => "all" %>
  <%= javascript_include_tag "application" %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'rails' %>
	<%= javascript_include_tag 'flowplayer-3.2.11.min.js' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="top-bar">
    	<div class="wrap">
				<nav id="menu">
    			<ul>
      			<li>
        			<%= link_to "Blog", posts_path %>
      			</li>
						<% if user_signed_in? %>
						<li>
        			<%= link_to 'Movies', films_path %>
      			</li>
						<li>
        			<%= link_to 'TV Shows', series_index_path %>
      			</li>
						<li>
							<%= link_to 'Transmission' , 'http://172.16.1.100:9091', :target => '_blank'%>
						</li>
      			<li>
        			 <%= link_to('Log out', destroy_user_session_path, :method => :delete) %>
      			</li>

						<% end %>
    			</ul>
  			</nav>
			</div>
	</section>
<header>
   <div class="wrap">
     <h1 class="logo">
       <%= link_to "WebKot", root_url %>
     </h1>
     <p class="tagline">Share your stuffs</p>

     <section id="flash">
       <% if notice %>
         <div class="message notice"><%= notice %></div>
       <% end %>

       <% if alert %>
         <div class="message alert"><%= alert %></div>
       <% end %>
     </section>
   </div>
 </header>
  <section id="content">
		<section id="stream">
			<% if current_user.nil? %>
				<%= render :partial => "_shared/login" %>
			<% else %>
				<%= render :partial => "_shared/profile", :locals => {:user => current_user} %>
			<% end %>
		  <div id="stream-wrap">

<%= yield %>
	</div>
	</section>
</section>
</body>
</html>
